<ScManager>:
    orientation: 'vertical'
    transition: FadeTransition()
    HomeScreen:
    Recipes:
    Weekly_Menus:
    NewRecipe:
    NewRecipeURL:


<HomeScreen>:
    name: 'home'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'MealMixer Home'
            font_size: 50
            size_hint: 1,.2
        BoxLayout:
            orientation:'horizontal'
            BoxLayout:
                canvas:
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source:root.home_screen_background
            BoxLayout:
                orientation:'vertical'
                StandardButton:
                    text: 'Recipes'
                    on_release: app.root.current = 'recipes'
                StandardButton:
                    text: 'Weekly Menus'
                    on_release: app.root.current = 'weekly_menus'
                StandardButton:
                    text: 'Quit MealMixer'
                    on_release: exit()
                StandardButton:
                    text: 'testkivyclass'
                    on_release: app.root.current = 'new_recipe_url'


