# this is an experiment with dynamic classes in Kivy
<StandardButton@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (48/255, 84/255, 255/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [58]
    size_hint_y: 1
    text_size: self.width, None
    halign: 'center'
    valign: 'middle'
    height: self.texture_size[1]
    font_size: 30
    size_hint_x: 1
    opacity:1



<ScManager>:
    orientation: 'vertical'
    transition: FadeTransition()
    HomeScreen:
    Recipes:
    Weekly_Menus:
    NewRecipe:
    NewRecipeURL:


<HomeScreen>:
    name: 'home'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'MealMixer Home'
            font_size: 50
            size_hint: 1,.2
        BoxLayout:
            orientation:'horizontal'
            BoxLayout:
                canvas:
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source:root.home_screen_background
            BoxLayout:
                orientation:'vertical'
                StandardButton:
                    text: 'Recipes'
                    on_release: app.root.current = 'recipes'
                StandardButton:
                    text: 'Weekly Menus'
                    on_release: app.root.current = 'weekly_menus'
                StandardButton:
                    text: 'Quit MealMixer'
                    on_release: exit()
                StandardButton:
                    text: 'testkivyclass'
